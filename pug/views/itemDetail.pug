doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		title Item Detail
		link(rel="stylesheet", href="../public/styles.css")
	body 
		h1= product.title
		.itemContainer 
			.itemThumbnail(style='width: 100%;') 
				img(src=product.thumbnail, alt=product.title, style='width:100%; object-fit:contain')
		p= `Precio: ${product.price}`
		a(href='/productos') Ver todos
